<%= render "shared/second-header"%>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <div class='form-header-text'>
      新規登録情報入力
    </div>
  </div>

  <%= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">氏名</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :name, class:"input-default", placeholder:"例) 山田太郎" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", placeholder:"8文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", placeholder:"上記と同じパスワードを入力して下さい" %>
  </div>
  <div class="form-group">
    <p class='form-info-header'>
      所属確認
    </p>
    <p class='form-info-text'>
      秘密保持の観点から、安心してご利用頂くために、所属名とチームメンバー間で共有する合言葉を入力ください。
    </p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">所属名</label>
      <span class="indispensable">必須</span>
    </div>
    <div>
      <%= f.text_field :occupation, class:"input-default", placeholder:"例) 浅草リース株式会社" %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">合言葉</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :watchword, class:"input-default", placeholder:"例) 雷門" %>
    </div>
  </div>
  <div class='register-btn'>
    <%= f.submit "新規登録", class:"register-red-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/second-footer"%>
