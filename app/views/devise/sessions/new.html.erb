<%= render "shared/second-header"%>

<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <div class='form-header-text'>
      登録情報入力
    </div>
  </div>

  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>

  <div class='test'>
    <div>メールアドレス（テスト用）：test@gmail.com</div>
    <div>パスワード（テスト用）：test1234</div>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", placeholder:"8文字以上の半角英数字" %>
  </div>
  <div class='register-btn'>
    <%= f.submit "ログイン", class:"register-red-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/second-footer"%>
